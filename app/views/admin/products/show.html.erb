<div class="row-fluid">
	<div class="shadow_wrapper span9"> 
  		<div class="shadow_base span9 cico">	
	         <!--Product title -->
	    	<div class="row-fluid">
				<div class="span12">
					<h1 class="page-header"><%=@product.title%></h1>
				</div>
	    
			</div>
    
    		<!--Buttons Edit and Delete -->
    		<div class="row-fluid">
      			<div class="span12">
        			<div class="btn-group">
    	
    					<%=link_to edit_admin_product_path(@product),class:"btn btn-primary" do %>
    	  				<i class="icon-edit icon-white"></i>
    	  				<%=t("admin.products.show.edit_product")%>
    	  				<%end%>
            
            			<%=link_to admin_product_path(@product),
               			method:'delete',
               			confirm:t("admin.products.show.delete_confirmation",title:@product.title),
               			class:"btn btn-danger" do %>
    	  	     		<i class="icon-trash icon-white"></i>
    	  	     		<%=t("admin.products.show.delete_product")%>
    	  				<%end%>
        			</div>	    
      			</div>    
    		</div> 
    		<br />
    
    		<!-- Flash messages -->
    		<div class="row-fluid">
      			<div class="span12">
        			<%=render :partial=>'shared/flash_messages',:locals=>{:model=>@product}%>
      			</div>
    		</div>
            
            <!-- Product's details -->
            <div class="row-fluid">
            	<%=render 'product'%> 	
            </div>
             
        </div>
    </div>
</div>


